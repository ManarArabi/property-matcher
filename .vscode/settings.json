{
  "eslint.enable": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "eslint.options": { "configFile": "eslint.config.js" },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "editor.formatOnSave": true,
  "cSpell.words": [
    "arabi",
    "manar",
    "mongorestore",
    "openapi",
    "randtoken",
    "unmocked"
  ],
}